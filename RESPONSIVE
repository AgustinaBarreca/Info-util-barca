OTRA SOLUCION:

 var canvas = new fabric.Canvas('c');
(function(){
  //var canvas = new fabric.Canvas('app');


  window.addEventListener('resize', resizeCanvas, false);

  function resizeCanvas() {
    canvas.setHeight($('#cancha').height()); canvas.setWidth($('#cancha').width());
    canvas.renderAll();
  }

  // resize on init
  resizeCanvas();
})();


